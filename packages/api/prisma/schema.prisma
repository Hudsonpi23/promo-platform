// Prisma Schema - Promo Platform
// Sistema de Promo√ß√µes para Afiliados

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum Role {
  ADMIN
  OPERATOR
}

enum OfferStatus {
  ACTIVE
  ARCHIVED
}

enum DraftStatus {
  PENDING
  APPROVED
  DISPATCHED
  ERROR
  REJECTED
  PENDING_X_QUOTA // Aguardando quota do X
}

enum BatchStatus {
  PENDING
  LOCKED
  CLOSED
}

enum DeliveryStatus {
  PENDING
  SENT
  ERROR
}

enum Channel {
  TELEGRAM
  WHATSAPP
  FACEBOOK
  TWITTER
  INSTAGRAM
  SITE
}

// üî• NOVO: Status de publica√ß√£o por canal (SISTEMA DE FILAS)
enum ChannelPostStatus {
  PENDING // Aprovado, mas ainda n√£o entrou na fila
  QUEUED // Est√° na fila do canal
  POSTED // J√° foi publicado
  ERROR // Erro na publica√ß√£o
}

// Estilo de humor da copy
enum HumorStyle {
  URUBU // Estilo "Urubu das Promo√ß√µes" - informal, meme
  NEUTRO // Tom neutro, profissional
  FLASH // Urg√™ncia extrema
  ENGRACADO // Piadas e memes pesados
}

// üî• NOVO: Tipo de promo√ß√£o
enum PromoType {
  RELAMPAGO // Urg√™ncia extrema, Thor, raio
  OFERTA_DO_DIA // Destaque sem desespero
  NORMAL // Texto limpo
  CUPOM // Explicar cupom rapidamente
}

// üî• NOVO: Modo de gera√ß√£o de link de afiliado
enum AffiliateLinkMode {
  DIRECT_PASTE // Link colado manualmente (Mercado Livre)
  TEMPLATE_APPEND // Adiciona par√¢metros ao link
  REDIRECTOR // Usa /go/:offerId?src=:channel
}

// üî• NOVO: N√≠vel de automa√ß√£o do canal
enum AutomationLevel {
  TOTAL // Totalmente autom√°tico (Telegram, Site, X)
  MANUAL_APPROVAL // Requer aprova√ß√£o (WhatsApp)
  HUMAN_ONLY // Operador humano (Facebook, Instagram)
}

enum Urgency {
  HOJE
  ULTIMAS_UNIDADES
  LIMITADO
  NORMAL
}

enum Priority {
  HIGH
  NORMAL
  LOW
}

// Source de onde veio a oferta
enum OfferSource {
  MANUAL // Cadastro manual
  MERCADO_LIVRE // API Mercado Livre
  AWIN // Rede Awin (afiliados)
  AMAZON // Amazon (futuro)
  MAGALU // Magazine Luiza (futuro)
  LOMADEE // Lomadee (futuro)
}

// ==================== AUTH ====================

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(OPERATOR)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens        RefreshToken[]
  approvedDrafts       PostDraft[]           @relation("ApprovedBy")
  mercadoLivreAccounts MercadoLivreAccount[]
  affiliateAccounts    AffiliateAccount[]    @relation("AffiliateOwner")

  @@index([email])
}

model RefreshToken {
  id        String    @id @default(cuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([tokenHash])
}

// ==================== CONFIG ====================

model Config {
  id               String   @id @default("singleton")
  siteName         String   @default("Manu das Promo√ß√µes")
  siteBaseUrl      String   @default("https://manupromocoes.com.br")
  defaultUtmSource String   @default("manupromocoes")
  defaultUtmMedium String   @default("site")
  telegramChannel  String? // @manupromocao
  whatsappNumber   String?
  twitterHandle    String? // @manupromocao
  facebookPage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model BatchSchedule {
  id        String   @id @default(cuid())
  time      String // "08:00", "11:00", etc
  enabled   Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([time])
  @@index([order])
}

// üî• CONFIGURA√á√ÉO DE REGRAS POR CANAL
model ChannelConfig {
  id      String  @id @default(cuid())
  channel Channel @unique

  // === AUTOMA√á√ÉO ===
  automationLevel AutomationLevel @default(TOTAL) // TOTAL, MANUAL_APPROVAL, HUMAN_ONLY

  // === INTERVALOS ===
  intervalMinutes   Int @default(15) // Intervalo m√≠nimo entre posts
  burstCooldownSecs Int @default(60) // Cooldown m√≠nimo em burst (segundos)

  // === LIMITES ===
  dailyLimit Int @default(0) // 0 = sem limite

  // === HOR√ÅRIO ===
  activeHours String? @default("08:00-22:00")

  // === BURST MODE (Telegram/Site) ===
  // Ex: [{"hour": 8, "posts": 10}, {"hour": 12, "posts": 15}]
  burstSchedule Json?

  // === ANTI-REPETI√á√ÉO ===
  repostCooldownHours Int @default(6) // Horas antes de permitir repost

  // === STATUS ===
  isEnabled        Boolean   @default(true)
  lastSchedulerRun DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== PROVIDER CONFIG ====================

model ProviderConfig {
  id      String      @id @default(cuid())
  source  OfferSource @unique
  enabled Boolean     @default(true)

  // Configura√ß√µes de busca
  keywords   String[] // Palavras-chave para busca
  categories String[] // IDs ou slugs de categorias

  // Filtros
  minDiscount     Int      @default(20) // Desconto m√≠nimo %
  minPrice        Decimal  @default(50) @db.Decimal(10, 2)
  maxPrice        Decimal? @db.Decimal(10, 2)
  conditionFilter String[] @default(["new"]) // "new", "used"

  // Limites
  maxItemsPerRun Int @default(50)

  // X (Twitter) espec√≠fico
  enableX     Boolean @default(true)
  xDailyLimit Int     @default(30) // M√°ximo de posts X por dia
  xMinScore   Int     @default(60) // Score m√≠nimo para sugerir X

  // Schedule
  scheduleTimes String[]  @default(["08:00", "11:00", "14:00", "18:00", "22:00"])
  lastRunAt     DateTime?

  // Credenciais (criptografadas ou via env)
  apiKey      String?
  apiSecret   String?
  accessToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== ENTIDADES BASE ====================

model Niche {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  icon      String?
  color     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers         Offer[]
  publishedPosts PublishedPost[]

  @@index([slug])
}

model Store {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logoUrl   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers         Offer[]
  publishedPosts PublishedPost[]

  @@index([slug])
}

// ==================== OFERTAS ====================

model Offer {
  id            String  @id @default(cuid())
  title         String
  description   String?
  originalPrice Decimal @db.Decimal(10, 2)
  finalPrice    Decimal @db.Decimal(10, 2)
  discountPct   Int
  affiliateUrl  String
  imageUrl      String?

  nicheId String
  niche   Niche  @relation(fields: [nicheId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  urgency   Urgency     @default(NORMAL)
  status    OfferStatus @default(ACTIVE)
  expiresAt DateTime?

  // üî• NOVO: Tipo de promo√ß√£o (afeta copy da IA)
  promoType PromoType @default(NORMAL)

  // üî• NOVO: Central de Afiliados
  canonicalUrl            String? // URL limpa do produto (para dedupe)
  ownerAffiliateAccountId String? // Dono do tracking
  ownerAffiliateAccount   AffiliateAccount? @relation("OfferAffiliateOwner", fields: [ownerAffiliateAccountId], references: [id])

  affiliateProgramId String? // Programa de afiliados
  affiliateProgram   AffiliateProgram? @relation("OfferAffiliateProgram", fields: [affiliateProgramId], references: [id])

  // === CAMPOS PARA SOURCES EXTERNOS (ex: Mercado Livre) ===
  source            OfferSource @default(MANUAL)
  externalId        String? // ID √∫nico da oferta no source (ex: MLB123456)
  productUrl        String? // URL original do produto (n√£o afiliado)
  sellerId          String? // ID do vendedor
  sellerName        String? // Nome do vendedor
  sellerReputation  String? // Reputa√ß√£o do vendedor (ex: "5_green", "platinum")
  availableQuantity Int? // Estoque dispon√≠vel
  condition         String? // "new", "used", etc
  categoryId        String? // ID da categoria no source
  categoryPath      String? // Caminho completo da categoria

  // Hash para deduplica√ß√£o (canonicalUrl + 72h)
  dedupeHash String?

  // === CAMPOS DE QUALIDADE E VALIDA√á√ÉO ===
  rawPayload  Json? // Payload original da fonte (para debug)
  errorReason String? // Motivo de rejei√ß√£o/erro
  currency    String  @default("BRL")
  country     String  @default("BR")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drafts         PostDraft[]
  publishedPosts PublishedPost[]
  clicks         Click[]

  // √çndice √∫nico por source + externalId
  @@unique([source, externalId])
  @@index([nicheId])
  @@index([storeId])
  @@index([status])
  @@index([source])
  @@index([dedupeHash])
  @@index([createdAt])
}

// ==================== SISTEMA DE CARGAS ====================

model Batch {
  id            String      @id @default(cuid())
  date          DateTime    @db.Date
  scheduledTime String // "08:00", "11:00", "14:00", "18:00", "22:00"
  status        BatchStatus @default(PENDING)

  // Contadores desnormalizados
  pendingCount    Int @default(0)
  approvedCount   Int @default(0)
  dispatchedCount Int @default(0)
  errorCount      Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drafts PostDraft[]

  @@unique([date, scheduledTime])
  @@index([date])
  @@index([status])
}

// ==================== POSTS ====================

model PostDraft {
  id String @id @default(cuid())

  offerId String
  offer   Offer  @relation(fields: [offerId], references: [id])

  batchId String
  batch   Batch  @relation(fields: [batchId], references: [id])

  // Copy gen√©rica (fallback)
  copyText String @db.Text

  // === COPY POR CANAL (humana, sem "rob√¥ vibes") ===
  copyTextTelegram String? @db.Text // 2-3 linhas, link no final
  copyTextSite     String? @db.Text // Similar ao Telegram
  copyTextX        String? @db.Text // Curto ~240 chars, imagem obrigat√≥ria, link no final

  channels Channel[]
  priority Priority  @default(NORMAL)

  status     DraftStatus @default(PENDING)
  approvedAt DateTime?

  approvedById String?
  approvedBy   User?   @relation("ApprovedBy", fields: [approvedById], references: [id])

  // === SCORE E VALIDA√á√ÉO ===
  score    Int     @default(0) // Score 0-100 baseado em regras
  aiScore  Int? // Score de confian√ßa da IA (legado)
  errorMsg String? @db.Text

  // === IMAGEM E REQUISITOS ===
  imageUrl          String? // URL da imagem para X
  requiresImage     Boolean @default(false)
  requiresHumanForX Boolean @default(true) // X sempre exige aprova√ß√£o humana

  // Variantes de copy por canal (JSON - legado, manter compatibilidade)
  copyChannelVariants Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveries        PostDelivery[]
  promotionChannels PromotionChannel[] // üî• NOVO: Estados por canal

  @@index([batchId])
  @@index([offerId])
  @@index([status])
  @@index([score])
  @@index([createdAt])
}

model PostDelivery {
  id String @id @default(cuid())

  draftId String
  draft   PostDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  channel      Channel
  status       DeliveryStatus @default(PENDING)
  sentAt       DateTime?
  externalId   String?
  errorMessage String?        @db.Text
  retries      Int            @default(0)

  // Copy gerado pelo CopyEngine para este canal
  payload Json? // { text, headline?, subcopy?, link }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([draftId, channel])
  @@index([status])
  @@index([channel])
}

// ==================== CANAL DE PROMO√á√ÉO (SISTEMA DE FILAS) ====================
// PromotionChannel - Estados independentes de publica√ß√£o por canal
// Cada canal tem sua pr√≥pria fila e ritmo de publica√ß√£o
// Front-end registra INTEN√á√ÉO ‚Üí Backend decide QUANDO postar

model PromotionChannel {
  id String @id @default(cuid())

  // Relacionamento com PostDraft (promo√ß√£o)
  draftId String
  draft   PostDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  // Canal
  channel Channel

  // Copy espec√≠fica para este canal
  copyText String? @db.Text

  // Estilo de humor da copy
  humorStyle HumorStyle @default(URUBU)

  // üî• Status do canal (SISTEMA DE FILAS)
  status ChannelPostStatus @default(PENDING)

  // üî• Timestamps da fila
  queuedAt DateTime? // Quando entrou na fila
  postedAt DateTime? // Quando foi publicado

  // Erro (se houver)
  errorReason String? @db.Text

  // ID externo da publica√ß√£o (ex: tweet_id, message_id)
  externalId String?

  // üî• Anti-repeti√ß√£o: hash = offerId + channel + humorStyle
  uniqueHash String?

  // üî• Aprova√ß√£o manual (WhatsApp)
  requiresApproval Boolean   @default(false)
  approvedAt       DateTime?
  approvedById     String?

  // Metadados adicionais
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([draftId, channel])
  // üî• √çndice otimizado para o scheduler de filas
  @@index([channel, status])
  @@index([queuedAt])
  @@index([postedAt])
}

// ==================== PUBLICA√á√ïES (SITE) ====================

model PublishedPost {
  id String @id @default(cuid())

  offerId String
  offer   Offer  @relation(fields: [offerId], references: [id])

  slug   String @unique
  goCode String @unique // C√≥digo curto para /go/:code

  // Snapshot dos dados
  title         String
  excerpt       String?  @db.Text
  copyText      String   @db.Text
  price         Decimal  @db.Decimal(10, 2)
  originalPrice Decimal? @db.Decimal(10, 2)
  discountPct   Int
  affiliateUrl  String
  imageUrl      String?
  urgency       Urgency  @default(NORMAL)

  nicheId String
  niche   Niche  @relation(fields: [nicheId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  isActive    Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  clicks Click[]

  @@index([slug])
  @@index([goCode])
  @@index([nicheId])
  @@index([storeId])
  @@index([isActive])
  @@index([publishedAt])
}

// ==================== TRACKING ====================

model Click {
  id String @id @default(cuid())

  goCode String

  publishedPostId String?
  publishedPost   PublishedPost? @relation(fields: [publishedPostId], references: [id])

  offerId String?
  offer   Offer?  @relation(fields: [offerId], references: [id])

  channel     Channel?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  userAgent   String?  @db.Text
  ipHash      String?
  referer     String?

  createdAt DateTime @default(now())

  @@index([goCode])
  @@index([publishedPostId])
  @@index([offerId])
  @@index([channel])
  @@index([createdAt])
}

// ==================== IMPORTA√á√ÉO ====================

model ImportJob {
  id        String   @id @default(cuid())
  type      String // OFFERS_JSON, OFFERS_CSV
  status    String   @default("PENDING") // PENDING, RUNNING, DONE, ERROR
  filename  String?
  totalRows Int?
  processed Int      @default(0)
  errors    Int      @default(0)
  errorLog  String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

// ==================== LOGS ====================

model ErrorLog {
  id String @id @default(cuid())

  draftId    String?
  deliveryId String?

  errorType String
  message   String  @db.Text
  details   Json?
  stack     String? @db.Text

  isResolved Boolean   @default(false)
  resolvedAt DateTime?
  resolvedBy String?

  createdAt DateTime @default(now())

  @@index([isResolved])
  @@index([errorType])
  @@index([createdAt])
}

// ==================== MERCADO LIVRE OAUTH (LEGADO - A REMOVER) ====================

model MercadoLivreAccount {
  id String @id @default(cuid())

  // Usu√°rio do sistema que conectou a conta
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Dados do usu√°rio no Mercado Livre
  mlUserId   String  @unique // ID do usu√°rio no ML
  mlNickname String? // Apelido/nome no ML
  mlEmail    String? // Email no ML

  // Tokens OAuth (din√¢micos, gerenciados pelo sistema)
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  tokenType    String   @default("Bearer")
  expiresAt    DateTime // Quando o access_token expira
  scope        String? // Escopos autorizados

  // Status
  isActive      Boolean   @default(true)
  lastUsedAt    DateTime?
  lastRefreshAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mlUserId])
  @@index([userId])
  @@index([isActive])
}

// ==================== üî• CENTRAL DE AFILIADOS ====================
// AffiliateAccount = dono do tracking (Hudson, S√≥cio, Parceiro)
// AffiliateProgram = loja/rede (Mercado Livre, Shopee, Casas Bahia, etc)
// AffiliateCredential = v√≠nculo dono + loja

model AffiliateAccount {
  id   String @id @default(cuid())
  name String // "Hudson", "Parceiro X"
  slug String @unique // "hudson", "parceiro-x"

  // Usu√°rio do sistema (opcional)
  userId String?
  user   User?   @relation("AffiliateOwner", fields: [userId], references: [id], onDelete: SetNull)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credentials AffiliateCredential[]
  offers      Offer[]               @relation("OfferAffiliateOwner")

  @@index([slug])
  @@index([userId])
}

model AffiliateProgram {
  id   String @id @default(cuid())
  name String // "Mercado Livre", "Amazon", "Shopee"
  slug String @unique // "mercado-livre", "amazon"

  // Modo de link
  linkMode AffiliateLinkMode @default(REDIRECTOR)

  // Template de URL (para TEMPLATE_APPEND)
  // Ex: "https://www.amazon.com.br/dp/{productId}?tag={affiliateTag}"
  urlTemplate String?

  // Dom√≠nios permitidos (para valida√ß√£o)
  allowedDomains String[] // ["mercadolivre.com.br", "produto.mercadolivre.com.br"]

  // Configura√ß√µes
  isActive Boolean @default(true)
  logoUrl  String?
  color    String? // Cor da marca

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  credentials AffiliateCredential[]
  offers      Offer[]               @relation("OfferAffiliateProgram")

  @@index([slug])
}

model AffiliateCredential {
  id String @id @default(cuid())

  // Relacionamentos
  accountId String
  account   AffiliateAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  programId String
  program   AffiliateProgram @relation(fields: [programId], references: [id], onDelete: Cascade)

  // Credenciais (variam por programa)
  affiliateTag String? // Tag de afiliado (Amazon: "meutag-20")
  affiliateId  String? // ID no programa
  apiKey       String? // Se tiver API
  apiSecret    String? // Se tiver API

  // Metadados
  metadata Json?

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([accountId, programId])
  @@index([accountId])
  @@index([programId])
}

// ==================== üî• ANTI-REPETI√á√ÉO ====================

model PostHistory {
  id String @id @default(cuid())

  // Hash √∫nico: offerId + channel + humorStyle
  uniqueHash String @unique

  offerId    String
  channel    Channel
  humorStyle HumorStyle

  // Dados do post
  copyText   String  @db.Text
  externalId String? // ID no canal (message_id, tweet_id)

  postedAt DateTime @default(now())

  @@index([offerId])
  @@index([channel])
  @@index([postedAt])
}
