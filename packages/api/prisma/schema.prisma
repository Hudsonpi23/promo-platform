// Prisma Schema - Promo Platform
// Sistema de Promo√ß√µes para Afiliados

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== ENUMS ====================

enum Role {
  ADMIN
  OPERATOR
}

enum OfferStatus {
  ACTIVE
  ARCHIVED
}

enum DraftStatus {
  PENDING
  APPROVED
  DISPATCHED
  ERROR
  REJECTED
  PENDING_X_QUOTA // Aguardando quota do X
}

enum BatchStatus {
  PENDING
  LOCKED
  CLOSED
}

enum DeliveryStatus {
  PENDING
  SENT
  ERROR
}

enum Channel {
  TELEGRAM
  WHATSAPP
  FACEBOOK
  TWITTER
  INSTAGRAM
  SITE
}

// Status de publica√ß√£o por canal
enum ChannelStatus {
  PENDING // Aguardando copy/prepara√ß√£o
  READY // Copy pronta, aguardando publica√ß√£o
  MANUAL // Requer aprova√ß√£o manual
  PUBLISHED // J√° publicado
  ERROR // Erro na publica√ß√£o
  SKIPPED // Ignorado/n√£o aplic√°vel
}

enum Urgency {
  HOJE
  ULTIMAS_UNIDADES
  LIMITADO
  NORMAL
}

enum Priority {
  HIGH
  NORMAL
  LOW
}

// Source de onde veio a oferta
enum OfferSource {
  MANUAL // Cadastro manual
  MERCADO_LIVRE // API Mercado Livre
  AWIN // Rede Awin (afiliados)
  AMAZON // Amazon (futuro)
  MAGALU // Magazine Luiza (futuro)
  LOMADEE // Lomadee (futuro)
}

// ==================== AUTH ====================

model User {
  id           String   @id @default(cuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role     @default(OPERATOR)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  refreshTokens        RefreshToken[]
  approvedDrafts       PostDraft[]           @relation("ApprovedBy")
  mercadoLivreAccounts MercadoLivreAccount[]

  @@index([email])
}

model RefreshToken {
  id        String    @id @default(cuid())
  tokenHash String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([tokenHash])
}

// ==================== CONFIG ====================

model Config {
  id               String   @id @default("singleton")
  siteName         String   @default("Manu das Promo√ß√µes")
  siteBaseUrl      String   @default("https://manupromocoes.com.br")
  defaultUtmSource String   @default("manupromocoes")
  defaultUtmMedium String   @default("site")
  telegramChannel  String? // @manupromocao
  whatsappNumber   String?
  twitterHandle    String? // @manupromocao
  facebookPage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model BatchSchedule {
  id        String   @id @default(cuid())
  time      String // "08:00", "11:00", etc
  enabled   Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([time])
  @@index([order])
}

// ==================== PROVIDER CONFIG ====================

model ProviderConfig {
  id      String      @id @default(cuid())
  source  OfferSource @unique
  enabled Boolean     @default(true)

  // Configura√ß√µes de busca
  keywords   String[] // Palavras-chave para busca
  categories String[] // IDs ou slugs de categorias

  // Filtros
  minDiscount     Int      @default(20) // Desconto m√≠nimo %
  minPrice        Decimal  @default(50) @db.Decimal(10, 2)
  maxPrice        Decimal? @db.Decimal(10, 2)
  conditionFilter String[] @default(["new"]) // "new", "used"

  // Limites
  maxItemsPerRun Int @default(50)

  // X (Twitter) espec√≠fico
  enableX     Boolean @default(true)
  xDailyLimit Int     @default(30) // M√°ximo de posts X por dia
  xMinScore   Int     @default(60) // Score m√≠nimo para sugerir X

  // Schedule
  scheduleTimes String[]  @default(["08:00", "11:00", "14:00", "18:00", "22:00"])
  lastRunAt     DateTime?

  // Credenciais (criptografadas ou via env)
  apiKey      String?
  apiSecret   String?
  accessToken String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================== ENTIDADES BASE ====================

model Niche {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  icon      String?
  color     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers         Offer[]
  publishedPosts PublishedPost[]

  @@index([slug])
}

model Store {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logoUrl   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  offers         Offer[]
  publishedPosts PublishedPost[]

  @@index([slug])
}

// ==================== OFERTAS ====================

model Offer {
  id            String  @id @default(cuid())
  title         String
  description   String?
  originalPrice Decimal @db.Decimal(10, 2)
  finalPrice    Decimal @db.Decimal(10, 2)
  discountPct   Int
  affiliateUrl  String
  imageUrl      String?

  nicheId String
  niche   Niche  @relation(fields: [nicheId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  urgency   Urgency     @default(NORMAL)
  status    OfferStatus @default(ACTIVE)
  expiresAt DateTime?

  // === CAMPOS PARA SOURCES EXTERNOS (ex: Mercado Livre) ===
  source            OfferSource @default(MANUAL)
  externalId        String? // ID √∫nico da oferta no source (ex: MLB123456)
  productUrl        String? // URL original do produto (n√£o afiliado)
  sellerId          String? // ID do vendedor
  sellerName        String? // Nome do vendedor
  sellerReputation  String? // Reputa√ß√£o do vendedor (ex: "5_green", "platinum")
  availableQuantity Int? // Estoque dispon√≠vel
  condition         String? // "new", "used", etc
  categoryId        String? // ID da categoria no source
  categoryPath      String? // Caminho completo da categoria

  // Hash para deduplica√ß√£o (title+price+store)
  dedupeHash String?

  // === CAMPOS DE QUALIDADE E VALIDA√á√ÉO ===
  rawPayload  Json? // Payload original da fonte (para debug)
  errorReason String? // Motivo de rejei√ß√£o/erro
  currency    String  @default("BRL")
  country     String  @default("BR")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drafts         PostDraft[]
  publishedPosts PublishedPost[]
  clicks         Click[]

  // √çndice √∫nico por source + externalId
  @@unique([source, externalId])
  @@index([nicheId])
  @@index([storeId])
  @@index([status])
  @@index([source])
  @@index([dedupeHash])
  @@index([createdAt])
}

// ==================== SISTEMA DE CARGAS ====================

model Batch {
  id            String      @id @default(cuid())
  date          DateTime    @db.Date
  scheduledTime String // "08:00", "11:00", "14:00", "18:00", "22:00"
  status        BatchStatus @default(PENDING)

  // Contadores desnormalizados
  pendingCount    Int @default(0)
  approvedCount   Int @default(0)
  dispatchedCount Int @default(0)
  errorCount      Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  drafts PostDraft[]

  @@unique([date, scheduledTime])
  @@index([date])
  @@index([status])
}

// ==================== POSTS ====================

model PostDraft {
  id String @id @default(cuid())

  offerId String
  offer   Offer  @relation(fields: [offerId], references: [id])

  batchId String
  batch   Batch  @relation(fields: [batchId], references: [id])

  // Copy gen√©rica (fallback)
  copyText String @db.Text

  // === COPY POR CANAL (humana, sem "rob√¥ vibes") ===
  copyTextTelegram String? @db.Text // 2-3 linhas, link no final
  copyTextSite     String? @db.Text // Similar ao Telegram
  copyTextX        String? @db.Text // Curto ~240 chars, imagem obrigat√≥ria, link no final

  channels Channel[]
  priority Priority  @default(NORMAL)

  status     DraftStatus @default(PENDING)
  approvedAt DateTime?

  approvedById String?
  approvedBy   User?   @relation("ApprovedBy", fields: [approvedById], references: [id])

  // === SCORE E VALIDA√á√ÉO ===
  score    Int     @default(0) // Score 0-100 baseado em regras
  aiScore  Int? // Score de confian√ßa da IA (legado)
  errorMsg String? @db.Text

  // === IMAGEM E REQUISITOS ===
  imageUrl          String? // URL da imagem para X
  requiresImage     Boolean @default(false)
  requiresHumanForX Boolean @default(true) // X sempre exige aprova√ß√£o humana

  // Variantes de copy por canal (JSON - legado, manter compatibilidade)
  copyChannelVariants Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveries        PostDelivery[]
  promotionChannels PromotionChannel[] // üî• NOVO: Estados por canal

  @@index([batchId])
  @@index([offerId])
  @@index([status])
  @@index([score])
  @@index([createdAt])
}

model PostDelivery {
  id String @id @default(cuid())

  draftId String
  draft   PostDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  channel      Channel
  status       DeliveryStatus @default(PENDING)
  sentAt       DateTime?
  externalId   String?
  errorMessage String?        @db.Text
  retries      Int            @default(0)

  // Copy gerado pelo CopyEngine para este canal
  payload Json? // { text, headline?, subcopy?, link }

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([draftId, channel])
  @@index([status])
  @@index([channel])
}

// ==================== CANAL DE PROMO√á√ÉO (NOVO MODELO) ====================
// PromotionChannel - Estados independentes de publica√ß√£o por canal
// Uma promo√ß√£o pode ter m√∫ltiplos canais, cada um com:
// - Copy espec√≠fica
// - Status independente
// - Configura√ß√£o de auto-publica√ß√£o
// - Agendamento individual

model PromotionChannel {
  id String @id @default(cuid())

  // Relacionamento com PostDraft (promo√ß√£o)
  draftId String
  draft   PostDraft @relation(fields: [draftId], references: [id], onDelete: Cascade)

  // Canal
  channel Channel

  // Copy espec√≠fica para este canal
  copyText String? @db.Text

  // Status do canal
  status ChannelStatus @default(PENDING)

  // Configura√ß√£o de automa√ß√£o
  autoPublish Boolean @default(false)

  // Agendamento
  scheduledAt DateTime?
  publishedAt DateTime?

  // Erro (se houver)
  errorReason String? @db.Text

  // ID externo da publica√ß√£o (ex: tweet_id, message_id)
  externalId String?

  // Metadados adicionais
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([draftId, channel])
  @@index([channel])
  @@index([status])
  @@index([autoPublish])
  @@index([scheduledAt])
}

// ==================== PUBLICA√á√ïES (SITE) ====================

model PublishedPost {
  id String @id @default(cuid())

  offerId String
  offer   Offer  @relation(fields: [offerId], references: [id])

  slug   String @unique
  goCode String @unique // C√≥digo curto para /go/:code

  // Snapshot dos dados
  title         String
  excerpt       String?  @db.Text
  copyText      String   @db.Text
  price         Decimal  @db.Decimal(10, 2)
  originalPrice Decimal? @db.Decimal(10, 2)
  discountPct   Int
  affiliateUrl  String
  imageUrl      String?
  urgency       Urgency  @default(NORMAL)

  nicheId String
  niche   Niche  @relation(fields: [nicheId], references: [id])

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  isActive    Boolean  @default(true)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  clicks Click[]

  @@index([slug])
  @@index([goCode])
  @@index([nicheId])
  @@index([storeId])
  @@index([isActive])
  @@index([publishedAt])
}

// ==================== TRACKING ====================

model Click {
  id String @id @default(cuid())

  goCode String

  publishedPostId String?
  publishedPost   PublishedPost? @relation(fields: [publishedPostId], references: [id])

  offerId String?
  offer   Offer?  @relation(fields: [offerId], references: [id])

  channel     Channel?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  userAgent   String?  @db.Text
  ipHash      String?
  referer     String?

  createdAt DateTime @default(now())

  @@index([goCode])
  @@index([publishedPostId])
  @@index([offerId])
  @@index([channel])
  @@index([createdAt])
}

// ==================== IMPORTA√á√ÉO ====================

model ImportJob {
  id        String   @id @default(cuid())
  type      String // OFFERS_JSON, OFFERS_CSV
  status    String   @default("PENDING") // PENDING, RUNNING, DONE, ERROR
  filename  String?
  totalRows Int?
  processed Int      @default(0)
  errors    Int      @default(0)
  errorLog  String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}

// ==================== LOGS ====================

model ErrorLog {
  id String @id @default(cuid())

  draftId    String?
  deliveryId String?

  errorType String
  message   String  @db.Text
  details   Json?
  stack     String? @db.Text

  isResolved Boolean   @default(false)
  resolvedAt DateTime?
  resolvedBy String?

  createdAt DateTime @default(now())

  @@index([isResolved])
  @@index([errorType])
  @@index([createdAt])
}

// ==================== MERCADO LIVRE OAUTH ====================

model MercadoLivreAccount {
  id String @id @default(cuid())

  // Usu√°rio do sistema que conectou a conta
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Dados do usu√°rio no Mercado Livre
  mlUserId   String  @unique // ID do usu√°rio no ML
  mlNickname String? // Apelido/nome no ML
  mlEmail    String? // Email no ML

  // Tokens OAuth (din√¢micos, gerenciados pelo sistema)
  accessToken  String   @db.Text
  refreshToken String   @db.Text
  tokenType    String   @default("Bearer")
  expiresAt    DateTime // Quando o access_token expira
  scope        String? // Escopos autorizados

  // Status
  isActive      Boolean   @default(true)
  lastUsedAt    DateTime?
  lastRefreshAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([mlUserId])
  @@index([userId])
  @@index([isActive])
}
