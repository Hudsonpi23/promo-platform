{
  "name": "promo-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:platform": "turbo dev --filter=platform",
    "dev:site": "turbo dev --filter=site",
    "dev:api": "turbo dev --filter=api",
    "db:generate": "cd packages/api && npx prisma generate",
    "db:push": "cd packages/api && npx prisma db push",
    "db:studio": "cd packages/api && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "npm@10.0.0"
}
